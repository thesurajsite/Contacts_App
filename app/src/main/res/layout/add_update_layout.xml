<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/relativeLayout"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        app:cardCornerRadius="0dp"
        app:cardElevation="30dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Orange"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/progress_circular"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/contact_image"
                    android:background="@color/white"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/addContactTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@string/font"
                android:text="Add Contact"
                android:textColor="#FF404040"
                android:textSize="30dp" />


            <EditText
                android:id="@+id/addName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/custom_input"
                android:fontFamily="@string/font"
                android:gravity="center_horizontal"
                android:hint="Name"
                android:textColor="#FF404040"
                android:textColorHint="#404040"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/addNumber"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_input"
                android:fontFamily="@string/font"
                android:gravity="center_horizontal"
                android:hint="Number"
                android:inputType="number"
                android:textColor="#FF404040"
                android:textColorHint="#404040"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/addInstagram"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_input"
                android:fontFamily="@string/font"
                android:gravity="center_horizontal"
                android:hint="Instagram ID"
                android:textColor="#FF404040"
                android:textColorHint="#404040"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/addX"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_input"
                android:fontFamily="@string/font"
                android:gravity="center_horizontal"
                android:hint="X ID"
                android:textColor="#FF404040"
                android:textColorHint="#404040"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/addLinkedin"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_input"
                android:fontFamily="@string/font"
                android:gravity="center_horizontal"
                android:hint="LinkedIn ID"
                android:textColor="#FF404040"
                android:textColorHint="#404040"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp">


                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@string/font"
                    android:text="Save"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/deleteButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_delete_24"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/custom_input"
                    android:padding="5dp"
                    app:tint="#F44336" />


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>

